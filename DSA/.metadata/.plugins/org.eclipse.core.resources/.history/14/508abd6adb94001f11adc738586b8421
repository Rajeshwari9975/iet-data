package com.demo.linkedlist;

public class Linkedlist {
	class Node{
		int data;
		Node next;
		public Node(int data) {
			super();
			this.data = data;
			this.next = null;
		}
		
	}
	
	Node head;
	

	public Linkedlist() {
		
		head = null;
	}
	
	public void addElement(int num) {
		Node node = new Node(num);
		if(head == null) {
			
			head= node;
		}
		else {
			Node temp = head;
			while(temp.next != null) {
				temp = temp.next;
			}
			temp.next = node;
		}
	}

	public void displayList() {
		Node temp = head;
		while(temp != null) {
			System.out.print(temp.data+ " ");
			temp = temp.next;
		}
	}

	public void addAtPosition(int i) {
		int count = 1;
		while(count != i) {
			temp = temp.next;
			count++
		}
	}
	

}
